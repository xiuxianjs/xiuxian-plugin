{
  "name": "alemonjs-xiuxian",
  "version": "1.3.0",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "type": "module",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./package": "./package.json"
  },
  "scripts": {
    "app": "node index.js",
    "dev": "npx lvy dev",
    "view": "npx lvy dev --jsxp",
    "build": "lvy build",
    "bundle-install": "yarn --cwd frontend install",
    "bundle-desktop": "yarn --cwd frontend-desktop build",
    "push": "yarn build && yarn bundle-desktop && npm publish",
    "bundle-dev": "yarn --cwd frontend dev",
    "bundle": "yarn --cwd frontend build",
    "eslint": "eslint src --fix",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "prepare": "husky"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "jsxp": "^1.2.3",
    "koa-bodyparser": "^4.4.1",
    "lodash-es": "^4.17.21",
    "md5": "^2.3.0",
    "minio": "^8.0.6",
    "node-schedule": "^2.1.1",
    "posthog-node": "^5.7.0",
    "sharp": "^0.34.3",
    "svg-captcha": "^1.4.0"
  },
  "devDependencies": {
    "@alemonjs/db": "^0.0.13",
    "@alemonjs/discord": "^2.1.0-alpha.19",
    "@alemonjs/onebot": "^2.1.0-alpha.11",
    "@alemonjs/process": "^0.0.7",
    "@eslint/js": "^9.18.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/lodash-es": "^4.17.12",
    "@types/md5": "^2.3.5",
    "@types/node": "^22.10.5",
    "@types/node-schedule": "^2.1.7",
    "alemonjs": "2.1.0-alpha.51",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "lvyjs": "0.2.25",
    "prettier": "^3",
    "sass": "^1.90.0",
    "tailwindcss": "3",
    "typescript-eslint": "^8.13.0"
  },
  "alemonjs": {
    "web": {
      "root": "dist"
    },
    "desktop": {
      "logo": "antd.ProjectOutlined",
      "platform": [],
      "command": [
        {
          "name": "xiuxian",
          "icon": "antd.ProjectOutlined",
          "command": "open.xiuxian"
        }
      ],
      "sidebars": [
        {
          "name": "xiuxian",
          "icon": "antd.ProjectOutlined",
          "command": "open.xiuxian"
        }
      ]
    }
  },
  "packageManager": "yarn@1.22.22"
}
